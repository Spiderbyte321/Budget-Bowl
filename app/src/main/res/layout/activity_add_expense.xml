<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/backgroundBlue"
    tools:context=".AddExpenseActivity">

    <TextView
        android:id="@+id/txtAddExpenseHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Expense Entry"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/txtExpenseAmtPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Enter Expense Amount"
        android:textSize="25dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/etAmountSpent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="R"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corners"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp">

    </View>

    <TextView
        android:id="@+id/txtExpenseDatePromt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Expense Date"
        android:textSize="25dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/etEntryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:hint="DD/MM/YYYY"
        android:background="@drawable/rounded_corners"
     />
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp">

    </View>

    <TextView
        android:id="@+id/txtExpenseCategoryHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expense Category"
        android:textSize="25dp"
        android:textAlignment="center"
      />

    <Spinner
        android:id="@+id/spCategories"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:padding="16dp"
        android:background="@color/inputBlue"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp">

    </View>

    <TextView
        android:id="@+id/txtExpenseDescriptionPromt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Expense Description"
        android:textSize="25dp"
        android:textAlignment="center"
       />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Description"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corners"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="32dp">

    <Button
        android:id="@+id/btnAddImage"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:backgroundTint="@color/buttonBlue"
        android:text="Add Image"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddEntry"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            app:backgroundTint="@color/buttonBlue"
            android:text="Add Entry"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/backBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            app:backgroundTint="@color/buttonBlue"
            android:text="Back"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>
</LinearLayout>