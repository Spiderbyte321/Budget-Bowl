<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundBlue">

    <ImageView
        android:id="@+id/imgTopDecor"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/topimagestretched" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Profile"
                android:textSize="40sp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textAlignment="center">
            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/ProfilePic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@drawable/pfpwithborder__3_" />

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnEditProfileIcon"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                app:backgroundTint="@color/buttonBlue"
                android:text="Edit Icon"
                android:layout_weight="1"
                android:layout_gravity="end"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/inputBlue">

            </View>

            <TextView
                android:id="@+id/txtProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "Full name"
                android:textSize="25dp"
               android:padding="8dp"
                />

            <EditText
                android:id="@+id/etProfileFullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Name Surname"
                android:background="@drawable/rounded_corners"
                />

            <TextView
                android:id="@+id/txtProfileUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "Username"
                android:textSize="25dp"
                android:padding="8dp"
                />

            <EditText
                android:id="@+id/etProfileUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="text"
                android:hint="username"
                android:background="@drawable/rounded_corners"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                ></View>

            <Button
                android:id="@+id/btnSetBudget"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:backgroundTint="@color/buttonBlue"
                android:text="Set Budget"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="20dp"
                />
            <Button
                android:id="@+id/btnSaveChanges"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:backgroundTint="@color/buttonBlue"
                android:text="Save Changes"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="20dp"
                />

            <Button
                android:id="@+id/btnDiscardChanges"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:backgroundTint="@color/buttonBlue"
                android:text="Discard Changes"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="20dp"
                />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
